
<%= form_with(url: root_path, method: :get, local: true) do |f| %>

  <%= hidden_field_tag :index, "true" %>
  <%= select_tag(:origin_id, options_for_select(@airport_options), prompt: "From ") %>

  <%= select_tag(:destination_id, options_for_select(@airport_options), prompt: "To ") %>

  <%= f.text_field :passengers %>

  <%= select_tag(:date, options_for_select(@date_options), prompt: "Date ") %>

  <%= submit_tag 'Find Flights', name: nil %>
<% end %>


<% if params %>
<% @flights.each do |flight| %>
    <%= flight.origin.city %>
    <%= flight.destination.city %>
  <%end %>
<% end %>
